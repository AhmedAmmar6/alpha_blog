<h1 class = "text-center"><%= @article.title %></h1>

<div class="container">
    <div class = "row justify-content-md-center">
        <div class="col-8 mt-5">
            <div class="card text-center">
            <div class="card-header font-italic">
                by <%= @article.user.username %>
            </div>
            <div class="card-body">
                <div class="card-text text-right"><%= simple_format(@article.description) %></div>
                <%= link_to "Edit", edit_article_path(@article), class:"btn btn btn-outline-info"%>
                <%= link_to "Delete", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"btn btn btn-outline-danger"%>
            </div>
            <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(@article.created_at) %> ago, edited <%= time_ago_in_words(@article.updated_at) %> ago</small>

            </div>
            </div>
        </div>
    </div>
</div>




<h1>Edit article</h1>

<% if flash[:error].present? %>
  <div>
    <h2>The following errors prevented the article from being saved:</h2>
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_for @article do |f| %>
    <p> 
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description%>
    </p>
    <p>
    <%= f.submit %>
    </p>
<% end %>

<p><%= link_to 'Return to Articles', articles_path%></p>